extends layout

block append styles
    link(rel='stylesheet', href='/stylesheets/device.css')

block append scripts
    script.
        globalDevice = !{JSON.stringify(device)}
    script(src='/javascripts/Chart.bundle.min.js')
    script(src='/javascripts/SMIThDevice.js')
    script(src='/javascripts/device.js')

block content
    div.content
        div.container.main-container
            div.device
                p.name
                    a(href="./") Home
                    span  > #{device.name}
            div.chart-container
                canvas#cycleChart(width="100%",height="250px")
        div.container.main-container.web-conf
            div.device
                form(name="web-constraints")